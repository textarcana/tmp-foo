#!/usr/bin/env perl

use strict;
use warnings;
use Carp;
use v5.10;

# Rules Table example.

use Data::Dump qw(dump);

my %rules_table;

$rules_table{foo} = sub{ say "bar"; };

sub main{

  say "Rules Table: " . dump(%rules_table) . "\n";

  say "Result of calling a rule:";

  $rules_table{foo}->();

}

main();
